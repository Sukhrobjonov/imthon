<%- include('parts/header') %> <% var error%>

<section class="my-4 py-4">
    <div class="container">
        <h1 class="text-center"><%= ads.user_ads_title%></h1>

        <div class="card mb-3 mt-4">
            <div class="row g-0">
                <div class="col-md-4">
                    <% if(!(ads.user_ads_photos[0] == 'no-photo.png')) {%>
                    <img
                        src="/public/uploads/<%= ads.user_ads_photos[0]%>"
                        class="img-fluid rounded-start"
                        alt="..."
                    />
                    <% }else {%>
                    <img
                        src="/public/images/<%= ads.user_ads_photos[0]%>"
                        class="img-fluid rounded-start"
                        alt="..."
                    />
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Xususiyat</th>
                                    <th>Qiymat</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Kategoriya</td>
                                    <td><%= ads.category_name%></td>
                                </tr>
                                <tr>
                                    <td>Narxi</td>
                                    <td><%= ads.user_ads_price%> so'm</td>
                                </tr>
                                <tr>
                                    <td>Egasi</td>
                                    <td>
                                        <a href="/users/<%= ads.user_id%>"
                                            ><%= ads.user_name%></a
                                        >
                                        <span>+<%= ads.user_ads_phone%></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Ta'rifi</td>
                                    <td><%= ads.user_ads_description%></td>
                                </tr>
                            </tbody>
                        </table>
                        <a
                            href="/messages/<%=ads.user_id%>"
                            class="w-100 d-block btn btn-primary"
                            >Yozish</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('parts/footer') %>
